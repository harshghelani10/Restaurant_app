<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/v_cart"
        android:layout_width="match_parent"
        android:background="@color/Yellow"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnback"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="25dp"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />
            </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_below="@id/v_cart"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_marginBottom="1dp"
        android:horizontalSpacing="4dp"
        android:numColumns="1"
        android:verticalSpacing="4dp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_below="@id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Total Price:"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Total Price"
        android:textAlignment="viewEnd"
        android:background="@drawable/radius_design_menu"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/gridView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="end" />

    <TextView
        android:id="@+id/parcel"
        android:layout_below="@id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parcel Your Order"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/reserve_table"
        android:layout_below="@id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre-Register Your Table"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <Button
        android:id="@+id/delete_cart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Delete Cart" />

    <Button
        android:id="@+id/make_order"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:text="Make Order" />
